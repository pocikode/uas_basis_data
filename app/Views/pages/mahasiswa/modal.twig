<div class="modal fade" role="dialog" tabindex="-1" id="modal-form-mahasiswa">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Tambah Mahasiswa</h4><button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="form-mahasiswa" method="post" action="">
                    <div class="row">
                        <div class="col col-md-6 mb-3">
                            <label class="form-label" for="input-nim">NIM</label>
                            <input class="form-control" type="number" id="input-nim" placeholder="Input NIM" name="nim" required>
                        </div>
                        <div class="col col-md-6 mb-3">
                            <label class="form-label" for="input-nama">Nama</label>
                            <input class="form-control" type="text" id="input-nama" placeholder="Input Nama Mahasiswa" name="nama" maxlength="100" required>
                        </div>
                        <div class="col col-md-6 mb-3">
                            <label class="form-label" for="input-jenjang">Jenjang</label>
                            <select class="form-select" id="input-jenjang" name="jenjang">
                                <option value="S1">S1</option>
                                <option value="S2">S2</option>
                                <option value="S3">S3</option>
                            </select>
                        </div>
                        <div class="col col-md-6 mb-3">
                            <label class="form-label" for="input-prodi">Program Studi</label>
                            <select class="form-select" id="input-prodi" name="prodi">
                                <option value="Informatika">Informatika</option>
                                <option value="Teknik Sipil">Teknik Sipil</option>
                                <option value="Arsitektur">Arsitektur</option>
                                <option value="Sistem Informasi">Sistem Informasi</option>
                                <option value="DKV">DKV</option>
                                <option value="Akuntansi">Akuntansi</option>
                                <option value="Manajemen">Manajemen</option>
                                <option value="Psikologi">Psikologi</option>
                            </select>
                        </div>
                        <div class="col col-md-6 mb-3">
                            <label class="form-label" for="input-tahun-masuk">Tahun Masuk</label>
                            <input class="form-control" type="number" id="input-tahun-masuk" min="2017" max="2023" placeholder="Input Tahun Masuk" name="tahun_masuk" required>
                        </div>
                        <div class="col col-md-6 mb-3">
                            <label class="form-label">Status Mahasiswa</label>
                            <div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="status" id="radio-status-aktif" value="aktif" checked>
                                    <label class="form-check-label" for="radio-status-aktif">Aktif</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="status" id="radio-status-non-aktif" value="tidak_aktif">
                                    <label class="form-check-label" for="radio-status-non-aktif">Non Aktif</label>
                                </div>
                            </div>
                        </div>
                        <div class="col col-md-6 mb-3">
                            <label class="form-label" for="input-semester">Semester</label>
                            <input class="form-control" type="number" max="20" id="input-semester" name="semester" placeholder="Input Semester" required>
                        </div>
                        <div class="col col-md-6 mb-3">
                            <label class="form-label" for="input-sks">SKS</label>
                            <input class="form-control" type="number" max="200" id="input-sks" name="sks" placeholder="Input SKS" required>
                        </div>
                        <div class="col col-md-6 mb-3">
                            <label class="form-label" for="input-ipk">IPK</label>
                            <input class="form-control" type="number" min="0" max="4" step="0.01" name="ipk" id="input-ipk" placeholder="Input IPK" required>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-light me-2" type="button" data-bs-dismiss="modal">Close</button>
                        <button class="btn btn-primary ms-2" id="btn-submit-form" type="submit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" role="dialog" tabindex="-1" id="modal-delete-mahasiswa">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="text-center mt-3">
                    <i class="d-block mb-5 fas fa-exclamation-triangle fa-5x text-warning"></i>
                    <div class="mb-5">
                        <h4 class="fs-6">Apakah anda yakin akan menghapus data mahasiswa</h4>
                        <span id="delete-mahasiswa-confirm-name" class="fw-bold fs-6">Agus Supriyatna (2021071050)</span>?
                    </div>
                </div>
                <form action="/mahasiswa/delete" method="post" class="d-none" id="delete-form">
                    <input type="hidden" name="nim" id="input-nim-delete" value="">
                </form>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-light me-2" type="button" data-bs-dismiss="modal">Close</button>
                    <button class="btn btn-danger ms-2" id="btn-delete-form" type="button">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>